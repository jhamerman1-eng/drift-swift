+# --- Makefile ---
+# Default to devnet .env (override with: make run-devnet ENV=path/to/file)
+ENV ?= devnet_drift.env
+
+# Helper: load .env into the shell
+define dotenv
+	@if [ ! -f $(ENV) ]; then echo "Missing $(ENV). Copy devnet_drift.env.example and fill values."; exit 1; fi
+	@set -a; . $(ENV); set +a; \
+	echo "Loaded $(ENV) for $$CLUSTER using $$SOLANA_RPC_URL"
+endef
+
+.PHONY: env-check
+env-check:
+	$(call dotenv)
+
+.PHONY: install
+install:
+	python -m pip install -U pip
+	-uv pip install -r requirements.txt || pip install -r requirements.txt
+
+.PHONY: preflight
+preflight: env-check
+	@set -a; . $(ENV); set +a; \
+	echo ">> Solana config:"; \
+	solana config set --url "$$SOLANA_RPC_URL" >/dev/null; \
+	solana config get; \
+	echo ">> Wallet pubkey:"; \
+	solana-keygen pubkey "$$KEYPAIR_PATH"; \
+	echo ">> Balance:"; \
+	solana balance "$$(solana-keygen pubkey $$KEYPAIR_PATH)" || true; \
+	echo ">> RPC reachability:"; \
+	python - <<'PY' || true
+from urllib.parse import urlparse
+import os, socket
+u=os.environ['SOLANA_RPC_URL']; h=urlparse(u).hostname or u
+print("Host:", h); s=socket.socket(); s.settimeout(3); s.connect((h,443)); s.close(); print("OK")
+PY
+
+.PHONY: run-devnet
+run-devnet: env-check
+	@set -a; . $(ENV); set +a; \
+	python -m bots.jit.main --env devnet
+
+.PHONY: metrics
+metrics: env-check
+	@curl -s localhost:8000/metrics | head -n 50 || true
